@model FolhaDePagamento.Models.Funcionario
@{
    ViewData["Title"] = "Incluir Folha de Pagamento";
}

<h1>Inserir Folha de Pagamento</h1>

<div class="container">
    <div class="row">
        <div class="col-md-5">

            <form asp-action="FolhaPagamento">
                <div class="form-group">
                    <label class="control-label">Nome do Funcionario</label>
                    <input class="form-control" asp-for="Nome" />
                </div>
                <div class="form-group">
                    <label class="control-label">Identidade do Funcionario</label>
                    <input class="form-control" asp-for="Rg" />
                </div>
                <div class="form-group">
                    <label class="control-label">CPF</label>
                    <input class="form-control" asp-for="Cpf" />
                </div>
                <div class="form-group">
                    <label class="control-label">Salario Bruto</label>
                    <input class="form-control" asp-for="Salario" />
                </div>
                <div class="form-group">
                    <label class="control-label">Salario familia</label>
                    <input class="form-control" asp-for="SalarioFamilia" />
                </div>
                <div class="form-group">
                    <label class="control-label">Vale Refeição</label>
                    <input class="form-control" asp-for="Vr" />
                </div>

                <div class="form-group">
                    <input value="Incluir Pagamento" type="submit" class="btn btn-primary" />
                </div>

            </form>

        </div>
    </div>
</div>